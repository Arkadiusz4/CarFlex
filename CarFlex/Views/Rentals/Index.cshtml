@model IEnumerable<CarFlex.Models.Rental>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CarId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @item.RentalDate.ToString("MM/dd/yyyy HH:mm")
            </td>
            <td>
                @item.ReturnDate.ToString("MM/dd/yyyy HH:mm")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RentalId" class="btn btn-warning">Edit</a>
                <a asp-action="Details" asp-route-id="@item.RentalId" class="btn btn-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.RentalId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
