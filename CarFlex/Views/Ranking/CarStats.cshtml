@model IEnumerable<CarFlex.Models.CarStatsViewModel>

@{
    ViewData["Title"] = "Car Stats";
    string currentSort = ViewBag.CurrentSort as string;
    string carIdSortParam = String.IsNullOrEmpty(currentSort) ? "carId_desc" : "";
    string rentalCountSortParam = currentSort == "RentalCount" ? "rentalCount_desc" : "RentalCount";
    string totalEarningsSortParam = currentSort == "TotalEarnings" ? "totalEarnings_desc" : "TotalEarnings";
}

<h1>Car Stats</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="CarStats" asp-route-sortOrder="@carIdSortParam">Car ID @if (currentSort == "carId_desc") { <span>&#9660;</span> } else { <span>&#9650;</span> }</a>
        </th>
        <th>Make</th>
        <th>Model</th>
        <th>
            <a asp-action="CarStats" asp-route-sortOrder="@rentalCountSortParam">Rental Count @if (currentSort == "rentalCount_desc") { <span>&#9660;</span> } else { <span>&#9650;</span> }</a>
        </th>
        <th>
            <a asp-action="CarStats" asp-route-sortOrder="@totalEarningsSortParam">Total Earnings @if (currentSort == "totalEarnings_desc") { <span>&#9660;</span> } else { <span>&#9650;</span> }</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CarId</td>
            <td>@item.Make</td>
            <td>@item.Model</td>
            <td>@item.RentalCount</td>
            <td>@item.TotalEarnings.ToString("C")</td>
        </tr>
    }
    </tbody>
</table>
